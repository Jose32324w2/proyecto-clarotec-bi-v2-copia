[Unit]
Description=gunicorn daemon para Proyecto Clarotec
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/var/www/proyecto-clarotec/backend
ExecStart=/var/www/proyecto-clarotec/backend/venv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/var/www/proyecto-clarotec/backend/clarotec.sock \
          clarotec_api.wsgi:application

[Install]
WantedBy=multi-user.target
